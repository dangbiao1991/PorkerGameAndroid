<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_confirm_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <com.yunke.xiaovo.widget.WrapContentView
        android:id="@+id/dv_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/progress_bg"
        android:orientation="vertical"
        android:padding="@dimen/x15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/x40">


            <com.yunke.xiaovo.widget.CommonTextView
                android:id="@+id/tv_message"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dialog_text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x20">

                <com.yunke.xiaovo.widget.CommonButton
                    android:id="@+id/btn_dialog_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/x40"
                    android:background="@drawable/dialog_button_bg"
                    app:textImage="@drawable/dialog_cancel_text" />

                <com.yunke.xiaovo.widget.CommonButton
                    android:id="@+id/btn_dialog_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/dialog_button_bg"
                    app:textImage="@drawable/dialog_confirm_text" />
            </LinearLayout>
        </LinearLayout>
    </com.yunke.xiaovo.widget.WrapContentView>

</LinearLayout>