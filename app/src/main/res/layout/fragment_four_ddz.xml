<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_top_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_top_user"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_top_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_top_user"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/game_ready"
            android:visibility="gone" />

        <com.yunke.xiaovo.widget.PorkerListView
            android:id="@+id/pv_top_porker"
            android:layout_below="@id/iv_top_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_below="@id/iv_top_user"
            android:id="@+id/iv_top_no_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/no_play"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_left_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_user_info">

        <ImageView
            android:id="@+id/iv_left_user"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_left_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_left_user"
            android:layout_centerHorizontal="true"
            android:src="@drawable/game_ready"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_right_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_top_user_info">

        <ImageView
            android:id="@+id/iv_right_user"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_right_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_right_user"
            android:layout_centerHorizontal="true"
            android:src="@drawable/game_ready"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_user_info"
        android:layout_toLeftOf="@id/rl_right_user_info"
        android:layout_toRightOf="@id/rl_left_user_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.yunke.xiaovo.widget.PorkerListView
                android:id="@+id/pv_left_porker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.yunke.xiaovo.widget.PorkerListView
                android:id="@+id/pv_right_porker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_left_no_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/no_play"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_right_no_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/no_play"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>