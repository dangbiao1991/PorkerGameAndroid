<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CommonButton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_room_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffff00" />

    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_user_headimg"
            style="@style/game_user_head_img"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:minWidth="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user_headimg"
            android:background="@drawable/game_user_info_bg"
            >

            <com.yunke.xiaovo.widget.CommonTextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13" />

            <ImageView
                android:id="@+id/iv_is_landlord"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y20"
                android:layout_toRightOf="@id/tv_nick_name"
                android:src="@drawable/game_landlord_tag" />
        </RelativeLayout>
    </RelativeLayout>

    <com.yunke.xiaovo.widget.PorkerListView
        android:id="@+id/pv_porker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/rl_user_info" />


    <ImageView
        android:id="@+id/iv_no_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pv_porker_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/game_no_play"
        android:visibility="gone" />

    <com.yunke.xiaovo.widget.PorkerListView
        android:id="@+id/pv_play_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pv_porker_view" />


    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pv_porker_view"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/confirm_button_long_bg"
            CommonButton:textImage="@drawable/game_start_game_text" />

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_no_play"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            CommonButton:textImage="@drawable/game_no_play_text" />

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_out_porker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/confirm_button_bg"
            CommonButton:textImage="@drawable/game_play_text" />

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_no_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/button_bg"
            CommonButton:textImage="@drawable/game_no_landlord_text" />

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_landlord"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            CommonButton:textImage="@drawable/game_landlord_text" />
    </LinearLayout>


    <com.yunke.xiaovo.widget.CommonButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_img" />

</RelativeLayout>