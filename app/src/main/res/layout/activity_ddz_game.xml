<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_room_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffff00" />

    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_user_headimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/head_image_border_bg"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

    <com.yunke.xiaovo.widget.DDZPorkerView
        android:id="@+id/pv_porker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_user_info" />

    <ImageView
        android:id="@+id/iv_no_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pv_porker_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_play"
        android:visibility="gone" />

    <com.yunke.xiaovo.widget.DDZPorkerView
        android:id="@+id/pv_play_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pv_porker_view" />


    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pv_porker_view"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_ready"
            style="@style/button_style"
            android:layout_width="@dimen/y170"
            android:layout_height="@dimen/x65"
            android:background="@drawable/button_bg"
            android:text="取消准备" />

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_no_play"
            style="@style/button_style"
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/x55"
            android:layout_marginRight="@dimen/x20"
            android:text="不出" />

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_out_porker"
            style="@style/confirm_button_style"
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/x55"
            android:text="出牌" />

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_no_landlord"
            style="@style/button_style"
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/x55"
            android:layout_marginRight="@dimen/x20"
            android:text="不叫" />

        <com.yunke.xiaovo.widget.CommonButton
            android:id="@+id/btn_landlord"
            style="@style/button_style"
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/x55"
            android:text="叫地主" />
    </LinearLayout>


</RelativeLayout>