<resources>

    <style name="button_style">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">#aaffffff</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>
    <style name="confirm_button_style">
        <item name="android:background">@drawable/confirm_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#518713</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">#eaf5d7</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="dialog_text_style">
        <item name="android:textColor">#5a1c1c</item>
        <item name="android:gravity">center</item>
        <item name="android:id">@id/tv_dialog_text</item>
        <item name="android:background">@drawable/dialog_text_bg</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">@dimen/y300</item>
        <item name="android:layout_height">@dimen/x65</item>
    </style>
    <style name="number_button_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
