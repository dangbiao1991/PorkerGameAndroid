<resources>

    <style name="button_style">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">#aaffffff</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>
    <style name="confirm_button_style">
        <item name="android:background">@drawable/confirm_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">#99ffffff</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>
</resources>
