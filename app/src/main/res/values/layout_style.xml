<resources>

    <style name="button_style">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">#aaffffff</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>
    <style name="confirm_button_style">
        <item name="android:background">@drawable/confirm_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#518713</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">#eaf5d7</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="number_button_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>



    <style name="game_user_head_img">
        <item name="android:background">@drawable/game_head_img_bg</item>
        <item name="android:paddingTop">@dimen/x13</item>
        <item name="android:paddingBottom">@dimen/x18</item>
        <item name="android:paddingLeft">@dimen/y13</item>
        <item name="android:paddingRight">@dimen/y13</item>
        <item name="android:src">@drawable/room_user_default_head</item>
        <item name="android:layout_width">@dimen/y120</item>
        <item name="android:layout_height">@dimen/y125</item>
    </style>



</resources>
